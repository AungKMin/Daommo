<%- include('../partials/header') %> 

<div class="container"> 
	<div clas="row">
		<h1 class="title"> Post a new topic </h1>
		<div class="form-box">
			<form action="/activities" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label target="activity[name]">Title</label>
					<input type="text" class="form-control" name="activity[name]" placeholder="Topic Title">
				</div>
				<div class="form-group">
					<label target="activity[date]">How long will this topic take?</label>
					<input type="text" class="form-control" name="activity[date]" placeholder="e.g. 15 minutes">
				</div>
				<div class="form-group">
					<label target="activity[category]">Categories</label>
					<select name="activity[category]" size="6" style="display: block" multiple>
						<% categories.forEach(function(category) { %>
							<option value="<%=category%>"><%=category%></option>
						<% }) %>	
					</select>
				</div>
				<div class="form-group">
					<label for="image">Image</label>
					<input type="file" id="image" class="form-control" name="image" accept="image/*">
				</div>
				<div class="form-group">
					<label target="activity[description]">Description</label>
					<input type="text" class="form-control" name="activity[description]" placeholder="description of topic">
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-lg btn-primary btn-block" value="Post">  
				</div>
			</form>
			<a href="/activities" >View Activities</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>

